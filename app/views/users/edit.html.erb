<h1> Update User Profile</h1>
<section id= "user-profile-edit-form">
  <%= form_tag profile_edit_path %>

      <%= label_tag :name %>
      <%= text_field_tag :name, "#{@user.name}"%>

      <%= label_tag :address %>
      <%= text_field_tag :address, "#{@user.addresses.pluck(:address).first}" %>

      <%= label_tag :city %>
      <%= text_field_tag :city, "#{@user.addresses.pluck(:city).first}" %>

      <%= label_tag :state %>
      <%= text_field_tag :state, "#{@user.addresses.pluck(:state).first}" %>

      <%= label_tag :zipcode %>
      <%= text_field_tag :zipcode, "#{@user.addresses.pluck(:zip).first}" %>

      <%= label_tag :email %>
      <%= text_field_tag :email, "#{@user.email}" %>

      <%= submit_tag 'Update Profile' %>
</section>
